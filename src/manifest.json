{
  "manifest_version": 3,
  "name": "Command Palette",
  "version": "1.0",
  "description": "A command palette",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "commands",
    "tabs",
    "activeTab",
    "scripting",
    "tabCapture",
    "history"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-command-palette": {
      "suggested_key": {
        "mac": "Command+Shift+P",
        "windows": "Ctrl+Shift+P",
        "linux": "Ctrl+Shift+P"
      },
      "description": "Toggle command palette"
    }
  }
}
